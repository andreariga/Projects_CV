<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AliceNeural.MainPage" Background="Black"
             x:Name="paginaPrincipale">

    <VerticalStackLayout
        VerticalOptions="Center">
        <Label x:Name="RecognitionText"               
               FontSize="Small"
               HeightRequest="0"
               BackgroundColor="#5d5363"
               HorizontalOptions="Center"/>
        <ImageButton x:Name="RecognizeSpeechBtn"
                Source="microfono.jpg"
                HeightRequest="70"
                Clicked="OnRecognitionButtonClicked2"
                HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
